        <div class="page-data">

            <form method="post" action="/movies/edit/<%=data[0].id%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Movie</td><td>: <input type="text" name="movie" value="<%=data[0].movie%>" required></td>
                 </tr>
                 <tr>
                    <td class="label">Year</td><td>: <input type="text" name="year" value="<%=data[0].year%>" required></td>
