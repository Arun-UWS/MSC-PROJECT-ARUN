            <form method="post" action="/movies/edit/<%=data._id%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Movie</td><td>: <input type="text" name="movie" value="<%=data.movie%>" required></td>
                 </tr>
                 <tr>
                    <td class="label">Year</td><td>: <input type="text" name="year" value="<%=data.year%>" required></td>
